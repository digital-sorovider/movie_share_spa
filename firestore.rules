rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /{document=**} {
    	// allow read, write;
      match /room/{roomId}{
      	allow read, update: if (resource.id == request.auth.uid) || resource.id in get(/databases/$(database)/documents/userPower/$(request.auth.uid)).data.ownerRooms
      }
      // allow read, write: if request.time < timestamp.date(2019, 12, 2);
    }
  }
}